<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMe"
    tools:context=".Main3Activity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Exit"
        android:onClick="clickedexit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:id="@+id/btn2"
        android:text="\n\nGuess the name of the movie based on the number of dashes provided.\n\nThere are five wrong letters that you can choose in the process of identifying the name.\n\nAnything more than that will kill this man.\n\nGood luck!"/>

    <ImageView
        android:layout_width="206dp"
        android:layout_height="279dp"
        android:layout_below="@id/btn2"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_foreground2" />
</RelativeLayout>